<div>
  <div class="row">
    <div class="col-auto">
      <h2>Welcome, {{name}}!</h2>
      <h2>Your Zodiac Sign Is, {{getZodiacSign birthday}}!</h2>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Create a New Affirmation:</h3>

      <form class="form new-affirmation-form">
        
        <div class="form-group">
          <label for="affirmation-text">Affirmation:</label>
          <textarea class="form-input" id="affirmation-text" name="affirmation-text"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>

    {{#if affirmations.length}}
    <div class="col-md-6 project-list">
      <h3>My affirmations:</h3>

      {{#each affirmations as |affirmation|}}
      <div class="row mb-2">
        <div class="col-md-8">
          {{affirmation.text}}
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{affirmation.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>

  <script src="./js/profile.js"></script>
</div>